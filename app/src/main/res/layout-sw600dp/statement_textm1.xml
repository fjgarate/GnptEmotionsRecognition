<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statement_tm1_total"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/statement_tm1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/BackColorMemory">

        <gnpt.app.fcomediavilla.com.gnpt.MyTextView
            style="@style/titleTaskStyle"
            android:text="@string/title_memory"/>
        <gnpt.app.fcomediavilla.com.gnpt.MyTextView
            style="@style/statementTaskStyle"
            android:text="@string/statement_textmemory1"/>
        <ImageButton
            style="@style/StatementContinueButtonStyle"
            android:src="@drawable/button_continue_ins_large_selector"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/text_tm1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_exit_large_selector"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:onClick="toResults"/>

        <gnpt.app.fcomediavilla.com.gnpt.MyTextView
            android:id="@+id/textview_tm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_to_memorize_size"
            android:textColor="@android:color/black"
            android:text="@string/text_textmemory"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_margin="@dimen/text_to_memorize_margin"
            android:lineSpacingExtra="@dimen/text_to_memorize_spacing_extra"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/button_continue_large_selector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="toClock"/>

    </RelativeLayout>


</LinearLayout>